<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <block name="blocks" default-type="cta">
        <!-- @see https://docs.sulu.io/en/2.4/reference/content-types/block.html -->

        <types>
            <type name="cta">
                <meta>
                    <title lang="en">CTA btn</title>
                    <title lang="uk">CTA btn</title>
                </meta>
                <properties>
                    <property name="title" type="text_line" colspan="6">
                        <meta>
                            <title lang="en">Title</title>
                            <title lang="uk">Заголовок</title>
                        </meta>
                        <params>
                            <param name="title" value="true"/>
                        </params>
                    </property>
                    <property name="description" type="text_editor">
                        <meta>
                            <title lang="en">Description</title>
                            <title lang="uk">Опис</title>
                        </meta>
                        <params>
                            <param name="table" value="false"/>
                            <param name="link" value="true"/>
                            <!-- CKEditor Parameters examples: -->
                            <param name="extra_allowed_content"
                                   value="img(*)[*]; span(*)[*]; div(*)[*]; iframe(*)[*]; script(*)[*]"/>
                            <param name="ui_color" value="#ffcc00"/>
                        </params>
                    </property>
                    <property name="btnText" type="text_line" colspan="6">
                        <meta>
                            <title lang="en">Btn Text</title>
                            <title lang="uk">Btn Text</title>
                        </meta>
                    </property>
                    <property name="btnLink" type="single_page_selection" colspan="6">
                        <meta>
                            <title lang="en">Btn Link</title>
                            <title lang="uk">Btn Link</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>