<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}
            {% include 'includes/meta.html.twig' %}
        {% endblock %}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
        <script src="../js/all.js"></script>

        {% block style %}{% endblock %}
    </head>
    <body>
        <div class="container py-4">
            <div id="wrapper" class="rowm-5">
                <header>
                    {% block header %}
                        {% include 'includes/navbar.html.twig' %}
                    {% endblock %}
                </header>

                {#    <form action="{{ path('sulu_search.website_search') }}" method="GET"> #}
                {#        <input name="q" type="text" placeholder="Search"/> #}
                {#        <input type="submit" value="Go"/> #}
                {#    </form> #}

                <main>
                    <section id="content">
                        {% block content %}{% endblock %}
                    </section>
                </main>

                <footer>
                    {% for item in sulu_navigation_root_tree('footer') %}
                        <li>
                            <a href="{{ sulu_content_path(item.url, item.webspaceKey) }}"
                               title="{{ item.title }}">{{ item.title }}</a>
                        </li>
                    {% endfor %}
                    {% block footer %}
                        <p>Copyright Study Sulu {{ 'now'|date('Y') }} </p>
                    {% endblock %}
                </footer>

                {#    {% block javascripts %}{% endblock %} #}
            </div>
        </div>
    </body>
</html>
